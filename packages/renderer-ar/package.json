{
  "name": "@cosmo/renderer-ar",
  "version": "0.1.0",
  "type": "module",
  "description": "WebXR + Three.js renderer for Cosmo UI",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --external react --external three --external @react-three/fiber --external @react-three/xr",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch --external react --external three --external @react-three/fiber --external @react-three/xr",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@cosmo/core-schema": "workspace:*",
    "@cosmo/validator": "workspace:*"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "three": "^0.160.0",
    "@react-three/fiber": "^8.15.0",
    "@react-three/xr": "^6.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.47",
    "@types/three": "^0.160.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
