{
  "name": "@cosmo/renderer-ar",
  "version": "2.0.0",
  "type": "module",
  "description": "WebXR + Three.js AR renderer for Cosmo UI - immersive 3D components with troika-three-text",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --external react --external three --external @react-three/fiber --external @react-three/xr --external troika-three-text",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch --external react --external three --external @react-three/fiber --external @react-three/xr --external troika-three-text",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "cosmo",
    "ui",
    "ar",
    "vr",
    "xr",
    "webxr",
    "three.js",
    "react-three-fiber",
    "spatial-computing",
    "immersive",
    "hud"
  ],
  "author": "Antonio Consales",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/antonioconsales/cosmo-ui.git",
    "directory": "packages/renderer-ar"
  },
  "homepage": "https://github.com/antonioconsales/cosmo-ui/tree/main/packages/renderer-ar#readme",
  "bugs": {
    "url": "https://github.com/antonioconsales/cosmo-ui/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@cosmo/core-schema": "workspace:*",
    "@cosmo/validator": "workspace:*",
    "troika-three-text": "^0.49.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "three": "^0.160.0",
    "@react-three/fiber": "^8.15.0",
    "@react-three/xr": "^6.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.47",
    "@types/three": "^0.160.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
