{
  "name": "@cosmo/core-schema",
  "version": "2.0.0",
  "description": "Type definitions, schemas, and core systems for Cosmo UI - including Theme, Spatial Intent, Adaptive Complexity, Voice-First, and AI Metadata",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./components/*": {
      "import": "./dist/components/*.mjs",
      "require": "./dist/components/*.js",
      "types": "./dist/components/*.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "cosmo",
    "ui",
    "schema",
    "ai-first",
    "cross-reality",
    "typescript",
    "theme",
    "spatial-intent",
    "adaptive-ui",
    "voice-first",
    "ar",
    "vr",
    "xr"
  ],
  "author": "Antonio Consales",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/antonioconsales/cosmo-ui.git",
    "directory": "packages/core-schema"
  },
  "homepage": "https://github.com/antonioconsales/cosmo-ui/tree/main/packages/core-schema#readme",
  "bugs": {
    "url": "https://github.com/antonioconsales/cosmo-ui/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
